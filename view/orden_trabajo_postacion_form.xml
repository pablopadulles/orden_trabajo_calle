<?xml version="1.0"?>
<form col="6">
    <group col="8" colspan="6" id="dates">
        <label name="date"/>
        <field name="date" widget="date" xexpand="1"/>
        <label name="date_execution"/>
        <field name="date_execution" widget="date" xexpand="1"/>
        <label name="datetime_start"/>
        <field name="datetime_start"/>
        <label name="datetime_finish"/>
        <field name="datetime_finish"/>
    </group>
    <group col="4" colspan="4" id="ids">
        <label name="pedido_por"/>
        <field name="pedido_por" xexpand="1"/>
        <label name="numero_ot"/>
        <field name="numero_ot" xexpand="1"/>
    </group>

    <group col="-1" colspan="2" id="checkboxes">
        <label name="active"/>
        <field name="active" xexpand="0" width="25"/>
        <!-- Add here some checkboxes ! -->
    </group>
    <newline/>
    <notebook colspan="6">
        <page string="General Information" id="general" col="6">
            <group col="4" colspan="6" id="ubicacion">
                <label name="prioriry"/>
                <field name="prioriry"/>
                <label name="street"/>
                <field name="street"/>
                <label name="city"/>
                <field name="city"/>
                <label name="central"/>
                <field name="central"/>
                <label name="armario"/>
                <field name="armario"/>
            </group>
            <field name="observaciones"/>
        </page>
        <page string="Materiales" id="materiales" col="4">
            <field name="shipments_out" colspan="4" />
            <button name="agregar_materiales" string="Agregar Materiales" icon="tryton-add"/>
            <field name="materiales" colspan="4" mode="tree"/>
        </page>
        <page string="Cuadrilla" id="tecnicos" col="4">
            <label name="tecnico_sup"/>
            <field name="tecnico_sup"/>
            <field name="tecnicos" colspan="4"/>
        </page>
        <page string="Trabajadores" id="trabajadores" col="4">
            <field name="workers" colspan="4" mode="tree"/>
        </page>
    </notebook>
    <group col="4" colspan="6" id="botones">
        <group col="2" colspan="1" id="state">
            <label name="state"/>
            <field name="state"/>
        </group>
        <group col="2" colspan="3" id="state">
            <button name="done" string="Done" icon="tryton-ok"/>    
            <button name="validated" string="Validate" icon="tryton-ok"/>
            <button name="open" string="Open" icon="tryton-ok"/>
            <button name="start" string="Start" icon="tryton-ok"/>
            <button name="stop" string="Stop" icon="tryton-cancel"/>
            <button name="resume" string="Resume" icon="tryton-forward"/>
        </group>
    </group>
    <field name="type"/>
</form>
